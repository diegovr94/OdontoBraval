<section class="login-block">
    <div class="container">
        <div class="row">
            <div class="col-md-4 login-sec">
                <h2 class="text-center">Iniciar Sesion</h2>
                <form class="login-form" action="/Login/Inicio" method="post">
                    <div class="form-group">
                        <label for="username" class="" style="  text-transform: inherit;">Username</label>
                        <input type="text" name="username" id="usuario" class="form-control" placeholder="">

                    </div>
                    <div class="form-group">
                        <label for="password" class="" style="  text-transform: inherit;">Contraseña</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="">
                    </div>

                    <div class="form-group pr-5 pt-3 mb-4">
                        <button type="submit" class="btn btn-login float-right mr-3 ">Enviar</button>
                    </div>
                </form>

                <div class="col-lg-10 px-0 my-4">
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="alert alert-danger">@ViewBag.Message</div>
                    }

                </div>
                <div class="copy-text"> <a href="@Url.Action("Registros", "Login")"  >Registrarse</a></div>
            </div>
            <div class="col-md-8 " style="background-color: white;  padding: 5px; border-radius: 20px;" >
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    

                    <div class="carousel-item active">
                        @*<img class="d-block img-fluid" src="https://static.pexels.com/photos/33972/pexels-photo.jpg" alt="First slide">*@

                        
                        <img class="d-block img-fluid" src="~/Content/Img/img-login.jpg" alt="First slide" style="border-radius: 0px 10px 10px 0px;" />
                    </div>


                </div>
            </div>
        </div>
    </div>
</section>

