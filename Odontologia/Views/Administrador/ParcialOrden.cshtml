
@model IEnumerable<Odontologia.Models.OrdenPedido>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12" style=" overflow-y:scroll;     height:300px;     ">


        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cantidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Empleado.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Producto.Codigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Proveedor.Nombre)
                </th>
                
            </tr>

            @foreach (var item in Model)
            {
                <tr style="background-color:white">
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cantidad)
                        <label></label>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Empleado.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.Codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Proveedor.Nombre)
                    </td>

                </tr>
            }

        </table>


    </div>
</div>
